{
  "name": "meet-point-app-backend",
  "version": "1.3.1",
  "description": "An application for organizing meetings anywhere",
  "author": {
    "name": "Roman Sukhinin",
    "email": "roman.developer@mail.ru"
  },
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "setup": "yarn && prisma generate",
    "nest:module": "nest g resource --no-spec",
    "ts:check": "tsc --noEmit",
    "lint:check": "eslint \"{src,apps,libs}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "format": "yarn lint:fix && yarn prettier:fix",
    "migrate:add": "prisma generate && prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "cross-env NODE_ENV=production nest build",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "joi": "^18.0.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^11.2.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lefthook": "^2.0.8",
    "prettier": "^3.0.0",
    "prisma": "^7.1.0",
    "prisma-openapi": "^1.3.6",
    "semantic-release": "^23.0.8",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=20.19.6",
    "yarn": ">=1.22.22"
  }
}
